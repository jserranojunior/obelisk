{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "dom"],
    "outDir": "dist",
    "paths": {
      "@": ["./src"]
    }
  },
  "include": ["src/**/*.ts", "src/index.ts"],
  "exclude": ["node_modules", "**/**/**/*.test.ts"]
}
